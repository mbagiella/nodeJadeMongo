extends layout

block content
    h1= title

    form#formAddUser(name="updateuser",method="post",action="/updateuser/#{user[0]._id}")
        input#inputUserName(type="text", placeholder="name", name="name" value="#{user[0].name}")
        input#inputUserEmail(type="text", placeholder="surname", name="surname" value="#{user[0].surname}")
        button#btnSubmit(type="submit") submit

    a(href='/') Cancel